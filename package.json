{
  "name": "hyperapp-two",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "main": "src/index.js",
  "watch": {
    "index": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true
    },
    "script": {
      "patterns": [
        "src"
      ],
      "extensions": "js",
      "quiet": true
    },
    "style": {
      "patterns": [
        "src"
      ],
      "extensions": "css",
      "quiet": true
    },
    "serve": {
      "patterns": [
        "."
      ],
      "extensions": "json",
      "quiet": true
    }
  },
  "babel": {
    "presets": ["es2015"],
    "plugins": [
      [ "transform-react-jsx", { "pragma": "h" } ]
    ]
  },
  "scripts": {
    "make": "run(){ cp make/$1.js src/$1s/_$2.js; }; run",
    "index": "copyfiles -f src/document/index.html dist",
    "script": "browserify -t [ babelify ] src/app.js > dist/index.js",
    "style": "node-sass -q src/document/index.css -o dist",
    "build": "npm run index && npm run script && npm run style && npm run minify",
    "serve": "http-server-spa dist",
    "minify": "npm run uglifyjs && npm run uglifycss",
    "uglifyjs": "uglifyjs --screw-ie8 -c -m -o dist/index.js -- dist/index.js",
    "uglifycss": "echo `uglifycss dist/index.css` > dist/index.css",
    "start": "npm run index && npm-watch"
  },
  "author": "Luke Jackson <lukejacksonn@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "copyfiles": "^1.2.0",
    "http-server-spa": "^1.2.0",
    "node-sass": "^3.8.0",
    "npm-watch": "^0.1.6",
    "uglify-js": "^2.7.5",
    "uglifycss": "0.0.25"
  },
  "dependencies": {
    "hyperapp": "^0.6.0",
    "hyperapp-unite": "^1.0.1"
  }
}
